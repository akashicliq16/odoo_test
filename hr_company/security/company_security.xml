<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="company_profile" model="ir.module.category">
        <field name="name">Company Profile</field>
    </record>

    <record id="profile_record_company_name" model="res.groups">
        <field name="name">Employee of company</field>
        <field name="category_id" ref="company_profile" />
    </record>
    <record id="profile_company_hr" model="res.groups">
        <field name="name">Hr</field>
        <field name="category_id" ref="company_profile" />
        <field name="implied_ids" eval="[(4,ref('profile_record_company_name'))]" />
    </record>
    <record id="profile_company_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="company_profile" />
        <field name="implied_ids" eval="[(4,ref('profile_company_hr'))]" />
    </record>

    <record id="company_access_admin_for" model="ir.rule">
        <field name="name">system Admin</field>
        <field name="model_id" ref="hr_company.model_hr_company_hr_company" />
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('profile_company_admin'))]" />
    </record>

    <record id="company_access_hr_for" model="ir.rule">
        <field name="name">company Hr </field>
        <field name="model_id" ref="hr_company.model_hr_company_hr_company" />
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4,ref('profile_company_hr'))]" />
    </record>

    <record id="company_access_empl_for" model="ir.rule">
        <field name="name">company Employee </field>
        <field name="model_id" ref="hr_company.model_hr_company_hr_company" />
        <field name="domain_force">[('usre_ids','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('profile_record_company_name'))]" />
    </record>
    

</odoo>
