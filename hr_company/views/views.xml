<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hr_company.list">
      <field name="name">hr_company.list</field>
      <field name="model">hr_company.hr_company</field>
      <field name="arch" type="xml">
        <tree>
          <field name="company_seq"/>
          <field name="name"/>
          <field name="emp_status" />
        </tree>
      </field>
    </record>

    <!-- Graph View. -->
    <record id="company_view_graph" model="ir.ui.view">
      <field name="name">company.view.graph</field>
      <field name="model">hr_company.hr_company</field>
      <field name="arch" type="xml">
        <graph string="" type="bar">
          <field name="company_seq" />
          <field name="name"/>

        </graph>
      </field>
    </record>

    <record id="hr_name_view_calendar" model="ir.ui.view">
      <field name="name">hr.name.view.calendar</field>
      <field name="model">hr_company.hr_company</field>
      <field name="arch" type="xml">
        <calendar date_start="create_date">
          <field name="company_seq" />
          <field name="name"/>

        </calendar>
      </field>
    </record>

    <record id="hr_company_view_form" model="ir.ui.view">
      <field name="name">hr.company.view.form</field>
      <field name="model">hr_company.hr_company</field>
      <field name="arch" type="xml">
        <form string="HR Company">
          <header>
            <button name="print_report" string="Print" type="object" class="oe_highlight" />
            
            <button  name="action_confirm" string="ORM Confirm" type="object" class="oe_highlight" />
            <!-- Whatsapp Button click event -->
            <!-- <button name="whatsapp_share" string="Share In Whatsapp" class="oe_highlight" data-hotkey="w" icon="fa-whatsapp" type="object" /> -->
            <button  name="action_confirm" string="search Confirm" type="object" class="oe_highlight" />
            <!-- StatusBar button click event. -->
            <button name="action_in_process" string="In Process" type="object" states="draft" />
            <button name="action_done" string="Mark As Done" type="object" states="in_process" />
            <button name="action_cancel" string="Cancel" type="object" states="draft,in_process" />
            <!-- options="{'clickable':'1'}" -->
            <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,in_process,done" />
          </header>
          <sheet>
            <!-- Sequence labale-->
            <div class="oe_title">
              <h1>
                <field name="company_seq" readonly="1" />
              </h1>
            </div>
            <group>
              <group>
                <field name="name" placeholder="Company Name" /> 
                <field name="emp_status" placeholder="Status" />
                <field name="phone" placeholder="Employee Phone Number" />
                <field name="currency_id" placeholder="Currency" />
                <field name="usre_ids" />
                <!-- <field name="eventcompute" placeholder="Event Total" /> Add Compute Field --> 
              </group>
              <group string="Company Address">
                  
                <field name="street" placeholder="Address" />
                <field name="street_one" placeholder="Address" />
                <field name="city" placeholder="City" />
                <field name="stat" placeholder="State" />
                <field name="country" placeholder="Country" />
                <field name="zip_code" placeholder="Pin Code" />
              </group>
            </group>
            <group>
              <group>
                <button name="action_test" type="object" string="Action Test" class="oe_highlight" />
                <button name="%(hr_company.action_window)d" type="action" string="employee action"  />
              </group>
            </group>
            <notebook>
              <page name="color" string="Color">
                <field name="color" widget="color_picker" />
                
              </page>
              
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hr_company.action_window">
      <field name="name">hr_company window</field>
      <field name="res_model">hr_company.hr_company</field>
      <field name="view_mode">tree,form,graph,calendar</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hr_company.action_server">
      <field name="name">hr_company server</field>
      <field name="model_id" ref="model_hr_company_hr_company"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="hr_company" id="hr_company.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="hr_company.menu_1" parent="hr_company.menu_root"/>
    <menuitem name="Menu 2" id="hr_company.menu_2" parent="hr_company.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="hr_company.menu_1_list" parent="hr_company.menu_1"
              action="hr_company.action_window"/>
    
    <menuitem name="Server to list" id="hr_company" parent="hr_company.menu_2"
              action="hr_company.action_server"/>

    <!-- Department -->

    <record id="department_types_form" model="ir.ui.view">
      <field name="name">department.types.form</field>
      <field name="model">department.types</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"  />
          </group>
        </form>
      </field>
    </record>

    <record id="department_types_list" model="ir.ui.view">
      <field name="name">department.types.list</field>
      <field name="model">department.types</field>
      <field name="arch" type="xml">
        <tree editable='bottom'>
          <field name="sequence" widget="handle"/>
          <field name="id" />
          <field name="name" required='1' />
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="department_types_action_window">
      <field name="name">employee profile Department</field>
      <field name="res_model">department.types</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_employee_department" name="Department" parent="hr_company.menu_1" action="hr_company.department_types_action_window" />
    
  </data>
</odoo>