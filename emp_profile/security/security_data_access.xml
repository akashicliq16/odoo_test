<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Fist Category Defaind And Second res.groups defain in category-->
        <record id="profile_records_name" model="ir.module.category">
            <field name="name">Employees Profile</field>
        </record>

        <record id="profile_record_employees_name" model="res.groups">
            <field name="name">Employees</field>
            <field name="category_id" ref="profile_records_name" />
        </record>
        <record id="profile_records_hr_name" model="res.groups">
            <field name="name">Hr</field>
            <field name="category_id" ref="profile_records_name" />
            <field name="implied_ids" eval="[(4,ref('profile_record_employees_name'))]" />
        </record>
        <record id="profile_records_admin_name" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="profile_records_name" />
            <field name="implied_ids" eval="[(4,ref('profile_records_hr_name'))]" />
        </record>

        
        
