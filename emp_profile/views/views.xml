<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="emp_profile_list">
      <field name="name">emp_profile.list</field>
      <field name="model">emp_profile.emp_profile</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sequence" widget="handle" />
          <field name="id" />
          <field name="name"/>
          <field name="email" />
          <field name="phone" />
        </tree>
      </field>
    </record>

    <!-- calendar views. -->
    <record id="emp_profile_view_calendar" model="ir.ui.view">
      <field name="name">emp.profile.view.calendar</field>
      <field name="model">emp_profile.emp_profile</field>
      <field name="arch" type="xml">
        <calendar date_start="create_date">
          <field name="sequence" widget="handle" />
          <field name="id" />
          <field name="name"/>
          <field name="email" />
          <field name="phone" />
        </calendar>
      </field>
    </record>

    <!-- Graph Views -->
    <record id="model_emp_view_graph" model="ir.ui.view">
      <field name="name">model.emp.view.graph</field>
      <field name="model">emp_profile.emp_profile</field>
      <field name="arch" type="xml">
        <graph string="" type="bar">
          <field name="id" />
          <field name="name"/>
          <field name="email" />
          <field name="phone" />
        </graph>
      </field>
    </record>

    <record id="employee_profile_view_form" model="ir.ui.view">
      <field name="name">employee.profile.view.form</field>
      <field name="model">emp_profile.emp_profile</field>
      <field name="arch" type="xml">
          <form>
            <header>
              <button  name="action_confirm" string="search Confirm" type="object" class="oe_highlight" />
              <!-- it is a to type of button object, action that button show wizard.-->
              <button name="action_wizard" string="Total Experince" type="object" />
              <button id="button_total_experince" name="%(wizard_company_action_window)d" string="Total Experince" type="action" class="btn-primary" />
            </header>
            <sheet>
                <group>
                    <group string="Automatic Field">
                      <field name="create_uid" />
                      <field name="create_date" />
                      <field name="write_uid" />
                      <field name="write_date" />
                    </group>
                      <group string="Employee Details">
                        <field name="name" placeholder="Employee Name" />
                        <field name="departments"  placeholder="Departments" /> <!-- widget="many2many_checkboxes" -->
                        <field name="email" placeholder = "Employee Email Id" />
                        <field name="phone" placeholder="Employee Phone Number" />
                        <field name="bday" placeholder="Employee Bday" />
                        <field name="currency_id" />
                        <field name="total_selary" />
                      </group>
                </group>
                <group>
                  <group>
                    <field name="gender" widget="radio" />
                    <field name="age" placeholder="Age" /> <!-- compute field/depents -->
                    <field name="employeestatus" help="It seen the employee status fields." />
                  </group>
                    <group string="Home Address">
                  
                      <field name="street" placeholder="Address" />
                      <field name="street_one" placeholder="Address" />
                      <field name="city" placeholder="City" />
                      <field name="state" placeholder="State" />
                      <field name="country" placeholder="Country" />
                      <field name="zip_code" placeholder="Pin Code" />
                    </group>
                </group>
                <notebook>
                  <page name="cv_file" string="Resume Upload">
                    <field name="cv" />
                  </page>
                </notebook>
            </sheet>
          </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="emp_profile.action_window">
      <field name="name">emp_profile window</field>
      <field name="res_model">emp_profile.emp_profile</field>
      <field name="view_mode">tree,form,calendar,graph</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="emp_profile.action_server">
      <field name="name">emp_profile server</field>
      <field name="model_id" ref="model_emp_profile_emp_profile"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    

    <!-- Top menu item -->

    <menuitem name="emp_profile" id="emp_profile.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="emp_profile.menu_1" parent="emp_profile.menu_root"/>
    <menuitem name="Menu 2" id="emp_profile.menu_2" parent="emp_profile.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="emp_profile.menu_1_list" parent="emp_profile.menu_1"
              action="emp_profile.action_window"/>
    <!-- <menuitem name="Department Type" id="department_types.menu_1_list" parent="emp_profile.menu_1"
              action="department_types.action_window"/> -->
    <menuitem name="Server to list" id="emp_profile" parent="emp_profile.menu_2"
              action="emp_profile.action_server"/>

    <!-- Wizard Create  -->          
    <menuitem name="Year Of Company" id="wizard_company_menu_2_year" parent="emp_profile.menu_2"
              action="wizard_company_action_window"/>

    <!-- Department -->

    <record id="department_types_form" model="ir.ui.view">
      <field name="name">department.types.form</field>
      <field name="model">department.types</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"  />
          </group>
        </form>
      </field>
    </record>

    <record id="department_types_list" model="ir.ui.view">
      <field name="name">department.types.list</field>
      <field name="model">department.types</field>
      <field name="arch" type="xml">
        <tree editable='bottom'>
          <field name="id" />
          <field name="name" required='1' />
        </tree>
      </field>
    </record>

    <record model="ir.actions.act_window" id="department_types_action_window">
      <field name="name">employee profile Department</field>
      <field name="res_model">department.types</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_employee_department" name="Department" parent="emp_profile.menu_1" action="emp_profile.department_types_action_window" />

  </data>
</odoo>